---
import Card from "@/components/Card.astro";
import { getAllLaunches } from "@/services/launches";
import type { Launch } from "@/types/api";

const launches: Launch[] = await getAllLaunches();
---

{
  launches.map(({ id, name, links, success, flight_number, date_utc }: Launch) => (
    <Card
      id={id}
      name={name}
      img={links.patch.small}
      success={success}
      flightNumber={flight_number}
      date={date_utc}
    />
  ))
}
